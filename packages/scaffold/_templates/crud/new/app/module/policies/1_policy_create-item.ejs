import { BasePolicy } from '@apoyo/policies'
import { PolicyContext } from '@/utils/authorizer'

import { <%= h.changeCase.pascal(module) %>Policy } from '../base.policy'

export class Create<%= h.changeCase.pascal(model) %>Policy implements BasePolicy {
  public async *authorize(ctx: PolicyContext) {
    yield* <%= h.changeCase.pascal(module) %>Policy.before(ctx)
    return ctx.isAdmin()
  }
}
