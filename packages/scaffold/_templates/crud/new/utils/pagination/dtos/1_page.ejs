import { Page } from '../models'

export interface PageMetadataDto {
  page: number
  perPage: number
  total: number
}

export interface PageDto<Dto> {
  items: Dto[]
  metadata: PageMetadataDto
}

export namespace PageDto {
  export function fromModel<Model, Dto>(model: Page<Model>, fn: (model: Model) => Dto): PageDto<Dto> {
    return {
      items: model.getItems().map(fn),
      metadata: model.getMetadata()
    }
  }
}